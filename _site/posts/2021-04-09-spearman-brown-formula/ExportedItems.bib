	keywords = {factor analysis, psychometrics, My paper, My\_publication\_peer\_reviewed, Body shape questionnaire, BSQ, internal reliability, survey, eating disorders, my\_publication, coefficient alpha, confirmatory factory analysis},
	pages = {315--321},
