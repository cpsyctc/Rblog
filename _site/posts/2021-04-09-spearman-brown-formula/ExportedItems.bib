}

@article{feldtStatisticalInferenceCoefficient1987,
	title = {Statistical inference for coefficient alpha},
	volume = {11},
	shorttitle = {Statistical inference for coefficient alpha},
	abstract = {Rigorous comparison of the reliability coefficients of several tests or measurement procedures requires a sampling theory for the coefficients.  This paper summarizes the important aspects of the sampling theory for Cronbach's (1951) coefficient alpha, a widely used internal consistency coefficient.  This theory enables researchers to test a specific numerical hypothesis about the population alpha and obtain confidence intervals for the population coefficient.  It also permits researchers to test the hypothesis of equality among several coefficients, either under the condition of independent samples or when the same sample has been used for all measurements.  The procedures are illustrated numerically, and the assumptions and derivations underlying the theory are discussed.
[Abstract, p.93]},
	journal = {Applied Psychological Measurement},
	author = {Feldt, Leonard S. and Woodruff, David J. and Salih, Fathi A.},
	year = {1987},
	note = {1},
	keywords = {methodology, statistics, psychometrics, confidence intervals, Cronbach's coefficient alpha, internal reliability, coefficient alpha, statistical inference, sampling distribution of Cronbach alpha},
	pages = {93--103},
	file = {Feldt et al. - 1987 - Statistical inference for coefficient alpha.pdf:/home/chris/Zotero/storage/44PVRCT9/Feldt et al. - 1987 - Statistical inference for coefficient alpha.pdf:application/pdf},
